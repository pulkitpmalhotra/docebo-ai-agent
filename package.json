{
  "name": "docebo-ai-agent",
  "version": "1.0.0",
  "private": true,
  "description": "AI-powered Docebo administration assistant with enrollment management",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "security:audit": "npm audit",
    "security:fix": "npm audit fix",
    "prebuild": "npm run type-check && npm run lint",
    "postbuild": "echo 'Build completed successfully'",
    "clean": "rm -rf .next && rm -rf node_modules/.cache",
    "deploy:vercel": "vercel --prod",
    "health-check": "curl -f http://localhost:3000/api/health || exit 1"
  },
  "dependencies": {
    "@google/generative-ai": "^0.2.1",
    "lucide-react": "^0.294.0",
    "next": "14.0.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "typescript": "^5.3.3",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^14.1.2",
    "@testing-library/user-event": "^14.5.1",
    "@types/jest": "^29.5.8",
    "@types/node": "^20.10.5",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.56.0",
    "eslint-config-next": "14.0.4",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.4.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "keywords": [
    "docebo",
    "lms",
    "ai",
    "assistant",
    "enrollment",
    "education",
    "nextjs",
    "typescript",
    "chat",
    "nlp"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/docebo-ai-agent.git"
  },
  "homepage": "https://github.com/yourusername/docebo-ai-agent#readme",
  "bugs": {
    "url": "https://github.com/yourusername/docebo-ai-agent/issues"
  },
  "license": "MIT",
  "author": {
    "name": "Your Name",
    "email": "your.email@company.com"
  },
  "contributors": [
    {
      "name": "Your Name",
      "email": "your.email@company.com",
      "role": "Lead Developer"
    }
  ],
  "funding": {
    "type": "github",
    "url": "https://github.com/sponsors/yourusername"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "<rootDir>/jest.setup.js"
    ],
    "moduleNameMapping": {
      "^@/(.*)$": "<rootDir>/$1"
    },
    "testPathIgnorePatterns": [
      "<rootDir>/.next/",
      "<rootDir>/node_modules/"
    ],
    "collectCoverageFrom": [
      "app/**/*.{js,jsx,ts,tsx}",
      "!app/**/*.d.ts",
      "!app/**/layout.tsx",
      "!app/**/loading.tsx",
      "!app/**/not-found.tsx",
      "!app/**/page.tsx"
    ],
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "coverageDirectory": "coverage",
    "testMatch": [
      "**/__tests__/**/*.(js|jsx|ts|tsx)",
      "**/*.(test|spec).(js|jsx|ts|tsx)"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
