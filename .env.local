# Docebo AI Agent - Environment Variables Template
# Copy this file to .env.local and fill in your actual values

# =============================================================================
# DOCEBO API CONFIGURATION
# =============================================================================
# Your Docebo domain (without https://)
# Example: company.docebosaas.com or company.docebolearning.com
DOCEBO_DOMAIN=your-domain.docebosaas.com

# OAuth2 Client Credentials (get from Docebo Admin > API and SSO)
DOCEBO_CLIENT_ID=your_client_id_here
DOCEBO_CLIENT_SECRET=your_client_secret_here

# Docebo User Credentials (admin user with API access)
DOCEBO_USERNAME=your_admin_username
DOCEBO_PASSWORD=your_admin_password

# =============================================================================
# AI CONFIGURATION
# =============================================================================
# Google Gemini API Key (get from https://makersuite.google.com/app/apikey)
GOOGLE_GEMINI_API_KEY=your_gemini_api_key_here

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
# Development environment
NODE_ENV=development

# Optional: Custom base URL for production
# NEXT_PUBLIC_BASE_URL=https://your-app.vercel.app

# =============================================================================
# SECURITY (Optional but Recommended)
# =============================================================================
# Rate limiting (requests per minute)
# API_RATE_LIMIT=100

# Session secret for security
# NEXTAUTH_SECRET=your_random_secret_here

# =============================================================================
# MONITORING (Optional)
# =============================================================================
# Error tracking (e.g., Sentry DSN)
# SENTRY_DSN=your_sentry_dsn_here

# Analytics (e.g., Google Analytics)
# NEXT_PUBLIC_GA_ID=your_ga_id_here

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
# Enable debug logging in development
# DEBUG=true

# API timeout in milliseconds
# API_TIMEOUT=30000

# Cache duration for API responses (in seconds)
# CACHE_DURATION=300
